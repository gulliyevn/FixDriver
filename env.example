# üîê FixDrive Environment Variables
# Copy this file to .env and fill in your actual values

# ===== EXPO CONFIGURATION =====
EXPO_TOKEN=your-expo-token-here
EXPO_APPLE_ID=your-apple-id@example.com
EXPO_ASC_APP_ID=1234567890
EXPO_APPLE_TEAM_ID=ABCD123456

# ===== APP STORE CREDENTIALS =====
# Apple Developer
APPLE_DISTRIBUTION_CERTIFICATE_PATH=credentials/apple-distribution.p12
APPLE_DISTRIBUTION_CERTIFICATE_PASSWORD=your-certificate-password
APPLE_PROVISIONING_PROFILE_PATH=credentials/apple-distribution.mobileprovision

# Google Play
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=credentials/google-service-account.json
UPLOAD_KEYSTORE_PATH=credentials/upload-keystore.jks
KEYSTORE_PASSWORD=your-keystore-password
KEY_ALIAS=your-key-alias
KEY_PASSWORD=your-key-password

# ===== API CONFIGURATION =====
# Backend API
EXPO_PUBLIC_API_BASE_URL=https://api.fixdrive.com
EXPO_PUBLIC_API_TIMEOUT=30000

# JWT Configuration
EXPO_PUBLIC_JWT_SECRET=your-production-jwt-secret

# ===== THIRD-PARTY SERVICES =====
# Twilio (for OTP)
EXPO_PUBLIC_TWILIO_ACCOUNT_SID=your-twilio-account-sid
EXPO_PUBLIC_TWILIO_AUTH_TOKEN=your-twilio-auth-token
EXPO_PUBLIC_TWILIO_FROM_PHONE=your-twilio-phone-number

# Stripe (for payments)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
EXPO_PUBLIC_STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key

# MapTiler (for maps)
EXPO_PUBLIC_MAPTILER_API_KEY=your-maptiler-api-key

# Redis (for caching)
EXPO_PUBLIC_REDIS_HOST=your-redis-host
EXPO_PUBLIC_REDIS_PORT=6379
EXPO_PUBLIC_REDIS_PASSWORD=your-redis-password

# ===== SUPPORT & CONTACT =====
EXPO_PUBLIC_SUPPORT_EMAIL=support@fixdrive.com
EXPO_PUBLIC_SUPPORT_PHONE=+994501234567

# ===== NOTIFICATION SERVICES =====
# Slack (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Telegram (for notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ===== ANALYTICS =====
# Firebase Analytics
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id

# ===== DEBUGGING =====
# Only for development
NODE_ENV=production
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=error

# ===== BUILD CONFIGURATION =====
# EAS Build
EAS_BUILD_PROFILE=production
EAS_BUILD_PLATFORM=all

# ===== SECURITY =====
# Certificate Pinning
EXPO_PUBLIC_CERTIFICATE_PINNING_ENABLED=true
EXPO_PUBLIC_CERTIFICATE_HASH=your-certificate-hash

# ===== FEATURE FLAGS =====
# Enable/disable features
EXPO_PUBLIC_FEATURE_CHAT_ENABLED=true
EXPO_PUBLIC_FEATURE_NOTIFICATIONS_ENABLED=true
EXPO_PUBLIC_FEATURE_ANALYTICS_ENABLED=true
EXPO_PUBLIC_FEATURE_CRASH_REPORTING_ENABLED=true

# ===== RATE LIMITING =====
EXPO_PUBLIC_API_RATE_LIMIT=100
EXPO_PUBLIC_API_RATE_WINDOW=60000

# ===== CACHE CONFIGURATION =====
EXPO_PUBLIC_CACHE_TTL=300000
EXPO_PUBLIC_CACHE_MAX_SIZE=50

# ===== NOTIFICATION CONFIGURATION =====
EXPO_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true
EXPO_PUBLIC_IN_APP_NOTIFICATIONS_ENABLED=true
EXPO_PUBLIC_EMAIL_NOTIFICATIONS_ENABLED=true

# ===== PAYMENT CONFIGURATION =====
EXPO_PUBLIC_PAYMENT_CURRENCY=USD
EXPO_PUBLIC_PAYMENT_MIN_AMOUNT=1.00
EXPO_PUBLIC_PAYMENT_MAX_AMOUNT=1000.00

# ===== LOCATION SERVICES =====
EXPO_PUBLIC_LOCATION_SERVICES_ENABLED=true
EXPO_PUBLIC_GPS_ACCURACY=high
EXPO_PUBLIC_LOCATION_TIMEOUT=10000

# ===== WEBSOCKET CONFIGURATION =====
EXPO_PUBLIC_WEBSOCKET_URL=wss://ws.fixdrive.com
EXPO_PUBLIC_WEBSOCKET_RECONNECT_INTERVAL=5000
EXPO_PUBLIC_WEBSOCKET_MAX_RECONNECT_ATTEMPTS=5
