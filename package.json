{
  "name": "fixdrive",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build": "expo build",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "build:web": "expo build:web",
    "eject": "expo eject",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "ci": "node scripts/code-quality.js && node scripts/security-audit.js && node scripts/performance-check.js",
    "ci:full": "npm run type-check && npm run lint && npm run format:check && npm run test:ci && npm run ci",
    "pre-commit": "npm run type-check && npm run lint && npm run format:check",
    "setup-cicd": "bash scripts/setup-cicd.sh",
    "clean": "rm -rf node_modules/.cache && rm -rf .expo && rm -rf build && rm -rf dist",
    "clean:all": "npm run clean && rm -rf node_modules && npm install",
    "analyze": "npx expo export --platform web && npx webpack-bundle-analyzer dist/static/js/*.js",
    "logs": "npx expo logs",
    "doctor": "npx expo doctor",
    "install:fix": "npx expo install --fix",
    "prebuild": "npx expo prebuild",
    "postbuild": "npx expo postbuild"
  },
  "dependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@mapbox/polyline": "^1.2.1",
    "@react-native-async-storage/async-storage": "1.18.2",
    "@react-native-community/datetimepicker": "^8.4.5",
    "@react-native-community/netinfo": "9.3.10",
    "@react-native-picker/picker": "^2.11.2",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@testing-library/react-native": "^13.3.3",
    "expo": "~49.0.15",
    "expo-app-loading": "~2.1.0",
    "expo-constants": "~14.4.2",
    "expo-device": "^8.0.9",
    "expo-font": "~11.4.0",
    "expo-haptics": "^15.0.7",
    "expo-image-picker": "~14.3.2",
    "expo-linear-gradient": "^15.0.7",
    "expo-linking": "~5.0.2",
    "expo-localization": "~14.3.0",
    "expo-location": "~16.1.0",
    "expo-notifications": "~0.20.1",
    "expo-permissions": "~14.2.1",
    "expo-router": "^2.0.0",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "i18n-js": "^4.5.1",
    "react": "18.2.0",
    "react-native": "0.72.10",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-maps": "^1.26.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-svg": "13.9.0",
    "react-native-vector-icons": "^10.0.0",
    "react-native-worklets": "^0.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/jest": "^29.5.5",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "audit-ci": "^6.0.0",
    "eslint": "^8.49.0",
    "eslint-config-expo": "^7.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.5.0",
    "jest-expo": "~49.0.0",
    "prettier": "^3.0.3",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.test.{js,jsx,ts,tsx}",
      "!src/**/*.spec.{js,jsx,ts,tsx}",
      "!src/test-utils/**",
      "!src/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/fixdrive.git"
  },
  "keywords": [
    "react-native",
    "expo",
    "taxi",
    "ride-sharing",
    "mobile-app"
  ],
  "author": "FixDrive Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/fixdrive/issues"
  },
  "homepage": "https://github.com/your-username/fixdrive#readme",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
